<Window x:Class="Lab_1.PhoneEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_1"
        mc:Ignorable="d"
        Title="PhoneEntry" Height="70" Width="241">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBox x:Name="phoneText" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Enter phone number" VerticalAlignment="Top" Width="120"/>
			<TextBox x:Name="personName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter person name" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText=""/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Button Width="120" Content="Cancel" Click="OnCancelClicked"></Button>
			<Button Width="120" Content="Save" Click="OnSaveClicked"></Button>
		</StackPanel>

	</StackPanel>

</Window>
